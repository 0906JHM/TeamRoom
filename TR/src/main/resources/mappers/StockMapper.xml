<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace = "com.itwillbs.Mappers.StockMapper">
  
  <select id="getMaxNum" resultType = "java.lang.Integer">
      select max(num) from stock
  </select>
  
  <insert id="insertBoard">
      insert into stock(whseCount, rawCode, prodCode, whseCode)
      values (#{whseCount}, #{rawCode}, #{prodCode}, #{whseCode})
  </insert>
  
  <select id="getBoardList" resultType="com.itwillbs.domain.StockDTO">
      select * from stock
      limit #{startRow}, #{pageSize}
  </select>
  
  <select id="getBoardCount" resultType="java.lang.Integer">
      select count(*) from stock
  </select>
  
  <select id="getBoard" resultType="com.itwillbs.domain.StockDTO">
      select * from stock
      where prodCode=#{prodCode}
  </select>
  
  <update id="updateBoard">
      update stock
      set whseCount = #{whseCount}
      where prodCode = #{prodCode}
  </update>
  
  <delete id="deleteBoard">
      delete from stock
      where prodeCode = #{prodCode}
  </delete>
  
  
  </mapper>